{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Linux Image",
            "type": "shell",
            "command": "docker pull lacledeslan/steamcmd:linux; docker pull debian:bullseye-slim; docker build . --rm -f linux.Dockerfile -t lltest/gamesvr-cssource --no-cache --build-arg BUILDNODE=$env:computername;",
            "group": "build",
            "problemMatcher": [],
            "promptOnClose": true
        },
        {
            "label": "Build & Execute Self Tests",
            "type": "shell",
            "command": "docker run -it --rm lltest/gamesvr-cssource ./ll-tests/gamesvr-cssource.sh;",
            "dependsOn": "Build Linux Image",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [],
            "promptOnClose": true
        },
        {
            "label": "Build & Run Interactive Server",
            "type": "shell",
            "command": "docker run -it --net=host lltest/gamesvr-cssource ./srcds_run -game cstrike +map de_dust2 -insecure -tickrate 100 -norestart +sv_lan 1 +usercon +rcon_password \"test123\";",
            "dependsOn": "Build Linux Image",
            "group": "build",
            "problemMatcher": [],
            "promptOnClose": true
        },
        {
            "label": "Build & Shell In",
            "type": "shell",
            "command": "docker run -it --net=host --rm lltest/gamesvr-cssource;",
            "dependsOn": "Build Linux Image",
            "group": "build",
            "problemMatcher": [],
            "promptOnClose": true
        }
    ]
}
